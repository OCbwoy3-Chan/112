// wtf??

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

// Bans

model RobloxUserBan {
    userId        String  @id @unique
    reason        String
    bannedUntil   String // UNIX seconds, -1 = Banned FOREVER
    privateReason String?
    moderatorId   String
    moderatorName String
    bannedFrom    String // SB, OCbwoy3sMultiverse, All
}

// Appeals

model RobloxUserAppeal {
    robloxUserId  String @id @unique
    ipAddress     String @unique
    email         String @unique
    appealMessage String
}

// Whitelist

model Whitelist {
    id String @id @unique
}

model Whitelist_RobloxUser {
    robloxId       String   @id @unique
    discordId      String
}

model Whitelist_OCbwoy3ChanAI {
    id String @id @unique
}
